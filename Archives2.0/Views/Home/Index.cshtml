@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page - Kamva Cloud Technologies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f8ff;
            color: #333;
            font-family: 'Arial', sans-serif;
        }

        .header {
            background: linear-gradient(to right, #0066cc, #ffcc00);
            padding: 2rem 0;
        }

            .header h1 {
                color: #fff;
                font-size: 3rem;
                margin: 0;
            }

            .header p {
                color: #fff;
                font-size: 1.2rem;
            }

        .content {
            padding: 3rem 1rem;
        }

            .content a {
                color: #0066cc;
                text-decoration: none;
                font-weight: bold;
            }

                .content a:hover {
                    text-decoration: underline;
                }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
        }

            .footer a {
                color: #ffcc00;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header class="header text-center">
        <div class="container">
            <h1>Welcome to Archives2.0</h1>
            <p>(by Kamva Cloud Technologies)</p>
        </div>
    </header>

    <main class="content text-center">
        <div class="container">
            <p>Contact <a href="mailto:info@kamvacloud.co.za">info@kamvacloud.co.za</a> for support!</p>
            <p>Learn about <a href="https://www.kamvacloud.co.za">Kamva Cloud Technologies</a>.</p>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Kamva Cloud Technologies. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
