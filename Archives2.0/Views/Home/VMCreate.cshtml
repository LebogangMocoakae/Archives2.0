                                <tr>
                                    <td>Ram</td>
                                    <td>8GB</td>
                                </tr>
                                <tr>
                                    <td>GPU</td>
                                    <td>N/A</td>
                                </tr>
                                <tr>
                                    <td>Storage</td>
                                    <td>128GB (HDD)</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="#" class="btn btn-primary">Click here</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mid level Specifications</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td>CPU Cores</td>
                                    <td>8</td>
                                </tr>
                                <tr>
                                    <td>Ram</td>
                                    <td>16GB</td>
                                </tr>
                                <tr>
                                    <td>GPU</td>
                                    <td>N/A</td>
                                </tr>
                                <tr>
                                    <td>Storage</td>
                                    <td>256GB (SSD)</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="#" class="btn btn-primary">Click here</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">High End Specifications</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td>CPU Cores</td>
                                    <td>16</td>
                                </tr>
                                <tr>
                                    <td>Ram</td>
                                    <td>32GB</td>
                                </tr>
                                <tr>
                                    <td>GPU</td>
                                    <td>N/A</td>
                                </tr>
                                <tr>
                                    <td>Storage</td>
                                    <td>1TB (SSD)</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="#" class="btn btn-primary">Click here</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS -->
